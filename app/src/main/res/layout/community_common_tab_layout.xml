<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Community_Common_Root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >


    <LinearLayout
        android:id="@+id/First_Invisible_Layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >

    </LinearLayout>


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="99"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/UserHomeIconLayout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center"
                >


                <ImageView
                    android:id="@+id/Image_Top_Line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    />


                <FrameLayout
                    android:id="@+id/Button_Full_Circle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    >

                    <ImageView
                        android:id="@+id/ImageCircle"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        />

                    <ImageView
                        android:id="@+id/pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"/>


                </FrameLayout>

                <ImageView
                    android:id="@+id/Image_Bottom_Line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/Second_Invisible_Layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                >


            </LinearLayout>
            <LinearLayout
                android:id="@+id/User_Details_Layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/from"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:textSize="9sp"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textStyle="italic"
                    android:gravity="center|left"/>

                />


                <TextView
                    android:id="@+id/subject"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.25"
                    android:gravity="left|center"
                    android:textSize="15sp"
                    android:text=""
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_dark"

                    />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".75"
                    android:gravity="left|center"
                    android:textSize="12sp"
                    android:text=""
                    android:textColor="@android:color/background_dark"

                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:visibility="invisible"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/Third_Invisible_Layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            </LinearLayout>
            <LinearLayout
                android:id="@+id/Badge_Layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/TV_BadgeNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Four_Invisible_Layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


            </LinearLayout>
            <LinearLayout
                android:id="@+id/Right_Arrow_Layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >



                <ImageView
                    android:id="@+id/ImageView_Move_Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/Five_Invisible_Layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"

            >
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>